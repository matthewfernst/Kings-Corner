{
	"compilerOptions": {
		"allowJs": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["DOM", "esnext"],
		"module": "esnext",
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "esnext",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noImplicitThis": false,
		"resolveJsonModule": true
	},
	"exclude": ["dist"]
}
